    <style name="RemoveActionBar">
        <item name="windowNoTitle">true</item>
        <item name="windowActionBar">false</item>
        <item name="android:windowContentOverlay">@null</item>
    </style>

    <style name="log_in">
        <item name="windowActionBar">false</item>
        <item name="android:textSize">26sp</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textColor">@color/main_purple_dark</item>
    </style>

    <style name="back">
        <item name="android:textSize">24sp</item>
        <item name="android:textColor">#25173A</item>
    </style>

    <style name="forgot_pass">
        <item name="android:textSize">12sp</item>

        <item name="android:textAllCaps">false</item>
        <item name="android:background">@android:color/transparent</item>
    </style>

    <style name="buttonBig" parent="Base.Widget.AppCompat.Button">
        <item name="android:background">@color/black</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="buttonSmall" parent="Base.Widget.AppCompat.Button">
        <item name="android:background">@color/white</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="password">
