    </style>

    <style name="name">
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="simpletime">
        <item name="windowActionBar">false</item>
        <item name="android:textSize">30sp</item>
