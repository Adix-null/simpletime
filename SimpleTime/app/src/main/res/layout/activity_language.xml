<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@color/white"
    tools:context=".ActivityLanguage"
    android:theme="@style/Theme.SimpleTime.NoActionBar">

    <TextView
        android:id="@+id/interests_1"
        android:layout_width="272dp"
        android:layout_height="wrap_content"
        android:paddingLeft="12dp"
        android:paddingTop="4dp"
        android:text="Language"
        android:textAppearance="@style/med_text"
        android:textSize="30sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/button145"
        android:layout_width="172dp"
        android:layout_height="50dp"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="80dp"
        android:text="Lithuanian"
        android:textAppearance="@style/big_text"
        android:textColor="@color/black"
        android:background="@drawable/gray_back"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/button165"
        android:layout_width="172dp"
        android:layout_height="50dp"
        android:layout_marginLeft="7dp"
        android:text="English"
        android:textAppearance="@style/big_text"
        android:textColor="@color/black"
        android:background="@drawable/gray_back"
        app:layout_constraintStart_toEndOf="@+id/button145"
        app:layout_constraintTop_toTopOf="@+id/button145" />

    <Button
        android:id="@+id/continue_language"
        android:layout_width="match_parent"
        android:layout_height="49dp"
        android:layout_margin="20dp"
        android:background="@drawable/back_blue"
        android:text="@string/cont"
        android:textAppearance="@style/categories_white"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />


</androidx.constraintlayout.widget.ConstraintLayout>