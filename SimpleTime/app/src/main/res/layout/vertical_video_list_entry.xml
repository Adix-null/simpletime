<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginEnd="5dp"
    android:orientation="vertical">

    <com.google.android.material.imageview.ShapeableImageView
        android:id="@+id/verticalVideoButton"
        android:layout_width="105dp"
        android:layout_height="200dp"
        android:scaleType="centerCrop"
        android:src="@drawable/thm1"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:shapeAppearanceOverlay="@style/squircle" />

    <TextView
        android:id="@+id/verticalVideoName"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:elevation="3dp"
        android:paddingStart="10dp"
        android:paddingEnd="10dp"
        android:paddingBottom="10dp"
        android:text="@string/lorem"
        android:textAlignment="center"
        android:textAppearance="@style/small_text"
        app:layout_constraintEnd_toEndOf="@+id/verticalVideoButton"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/verticalVideoButton" />


</androidx.constraintlayout.widget.ConstraintLayout>