<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".ActivityUpload2">

    <TextView
        android:id="@+id/textView7"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:paddingStart="20dp"
        android:text="Info"
        android:textAppearance="@style/title"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/back_au3"
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:layout_margin="20dp"
        android:background="@drawable/back_arrow"
        android:textAppearance="@style/categories_white"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ScrollView
        android:id="@+id/scrollView4"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintBottom_toTopOf="@+id/continue_au3"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView7">

        <LinearLayout
            android:id="@+id/linearLayout2"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:paddingStart="30dp"
                android:text="You can leave blank fields if there are less hosts or participants"
                android:textAppearance="@style/subtitle" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:paddingStart="30dp"
                android:text="Hosts of the podcast"
                android:textAppearance="@style/big_text_b" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="2.0"
                    android:layout_marginLeft="20dp"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:text="Enter the name"
                        style="@style/small_text"
                        android:ellipsize="marquee"
                        android:singleLine="true"/>

                    <EditText
                        android:id="@+id/host1"
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:background="@drawable/round_corner_form"
                        android:fontFamily="@font/inter_medium"
                        android:hint="type here"
                        android:inputType="text"
                        android:paddingStart="10dp"
                        android:textSize="15sp"/>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1.0"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="20dp"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:text="Upload the picture"
                        style="@style/small_text"
                        android:ellipsize="marquee"
                        android:singleLine="true"/>

                    <Button
                        android:id="@+id/uploadPic1"
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:layout_weight="1.0"
                        android:background="@drawable/round_corner_apple"
                        android:text="Add file"
                        android:textAppearance="@style/apple"
                        app:layout_constraintBottom_toTopOf="@+id/linearLayout3"
                        app:layout_constraintEnd_toEndOf="parent" />

                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="2.0"
                    android:layout_marginLeft="20dp"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:text="Enter the name"
                        style="@style/small_text"
                        android:ellipsize="marquee"
                        android:singleLine="true"/>

                    <EditText
                        android:id="@+id/host2"
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:background="@drawable/round_corner_form"
                        android:fontFamily="@font/inter_medium"
                        android:hint="type here"
                        android:inputType="text"
                        android:paddingStart="10dp"
                        android:textSize="15sp"/>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1.0"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="20dp"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:text="Upload the picture"
                        style="@style/small_text"
                        android:ellipsize="marquee"
                        android:singleLine="true"/>

                    <Button
                        android:id="@+id/uploadPic2"
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:layout_weight="1.0"
                        android:background="@drawable/round_corner_apple"
                        android:text="Add file"
                        android:textAppearance="@style/apple"
                        app:layout_constraintBottom_toTopOf="@+id/linearLayout3"
                        app:layout_constraintEnd_toEndOf="parent" />

                </LinearLayout>

            </LinearLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:paddingStart="30dp"
                android:text="Guests of the podcast"
                android:textAppearance="@style/big_text_b" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="2.0"
                    android:layout_marginLeft="20dp"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:text="Enter the name"
                        style="@style/small_text"
                        android:ellipsize="marquee"
                        android:singleLine="true"/>

                    <EditText
                        android:id="@+id/guest1"
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:background="@drawable/round_corner_form"
                        android:fontFamily="@font/inter_medium"
                        android:hint="type here"
                        android:inputType="text"
                        android:paddingStart="10dp"
                        android:textSize="15sp"/>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1.0"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="20dp"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:text="Upload the picture"
                        style="@style/small_text"
                        android:ellipsize="marquee"
                        android:singleLine="true"/>

                    <Button
                        android:id="@+id/uploadPic3"
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:layout_weight="1.0"
                        android:background="@drawable/round_corner_apple"
                        android:text="Add file"
                        android:textAppearance="@style/apple"
                        app:layout_constraintBottom_toTopOf="@+id/linearLayout3"
                        app:layout_constraintEnd_toEndOf="parent" />

                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="2.0"
                    android:layout_marginLeft="20dp"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:text="Enter the name"
                        style="@style/small_text"
                        android:ellipsize="marquee"
                        android:singleLine="true"/>

                    <EditText
                        android:id="@+id/guest2"
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:background="@drawable/round_corner_form"
                        android:fontFamily="@font/inter_medium"
                        android:hint="type here"
                        android:inputType="text"
                        android:paddingStart="10dp"
                        android:textSize="15sp"/>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1.0"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="20dp"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:text="Upload the picture"
                        style="@style/small_text"
                        android:ellipsize="marquee"
                        android:singleLine="true"/>

                    <Button
                        android:id="@+id/uploadPic4"
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:layout_weight="1.0"
                        android:background="@drawable/round_corner_apple"
                        android:text="Add file"
                        android:textAppearance="@style/apple"
                        app:layout_constraintBottom_toTopOf="@+id/linearLayout3"
                        app:layout_constraintEnd_toEndOf="parent" />

                </LinearLayout>

            </LinearLayout>

        </LinearLayout>

    </ScrollView>

    <Button
        android:id="@+id/continue_au3"
        android:layout_width="match_parent"
        android:layout_height="49dp"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:layout_marginBottom="10dp"
        android:background="@drawable/round_corner_continue"
        android:text="Continue"
        android:textAppearance="@style/categories_white"
        app:layout_constraintBottom_toTopOf="@+id/linearLayout3"
        app:layout_constraintEnd_toEndOf="parent" />

    <LinearLayout
        android:id="@+id/linearLayout3"
        android:layout_width="match_parent"
        android:layout_height="65dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <fragment
            android:id="@+id/bottomfrag_home"
            android:name="com.example.simpletime.ActivityBottomNavbar"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            tools:layout="@layout/fragment_bottom_navbar" />
    </LinearLayout>


</androidx.constraintlayout.widget.ConstraintLayout>